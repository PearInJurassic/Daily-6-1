<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.massizhi.daily.dao.UserFollowDao">
    <select id="getUserFollowListByUserId" resultType="com.massizhi.daily.entity.UserFollow">
        SELECT tb_user_follow_id,user_id,follow_id,follow_time
        FROM tb_user_follow
        WHERE
        user_id=#{userId}
        ORDER BY follow_time
        DESC
    </select>
    <select id="getUserFollowByTwoId" resultType="com.massizhi.daily.entity.UserFollow">
        SELECT tb_user_follow_id,user_id,follow_id,follow_time
        FROM tb_user_follow
        WHERE
        user_id=#{userId}
        AND
        follow_id=#{followId}
    </select>
    <insert id="insertUserFollow" useGeneratedKeys="true" keyProperty="userFollowId"
            keyColumn="tb_user_follow_id" parameterType="com.massizhi.daily.entity.UserFollow">
        INSERT INTO
        tb_user_follow(tb_user_follow_id,user_id,follow_id,follow_time)
        VALUES
        (#{userFollowId},#{userId},#{followId},#{followTime})
    </insert>
    <delete id="deleteUserFollowByTwoId">
        DELETE FROM
        tb_user_follow
        WHERE
        user_id=#{userId}
        AND
        follow_id=#{followId}
    </delete>
</mapper>