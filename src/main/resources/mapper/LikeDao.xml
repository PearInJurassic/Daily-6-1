<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.daily.dao.LikeDao">
	<select id="queryLikeNumByPostId" resultType="java.lang.Integer">
		SELECT COUNT(*)
		FROM tb_like
		WHERE
		post_id=#{postId}
	</select>
	<select id="queryLikeByPostIdAndUserId" resultType="java.lang.Integer">
		SELECT COUNT(*)
		FROM tb_like
		WHERE
		post_id =
		#{postId} and user_id=#{userId}
	</select>
	<select id="queryLikePostIdByUserId" resultType="java.lang.Integer">
		SELECT post_id
		FROM tb_like
		WHERE
		user_id=#{userId}
	</select>
	<select id="queryUserIdWhoLikePostByPostId" resultType="java.lang.Integer">
		SELECT user_id
		FROM tb_like
		WHERE
		post_id=#{postId}
	</select>


	<insert id="insertLike" useGeneratedKeys="true" keyProperty="likeId"
			keyColumn="like_id" parameterType="com.daily.entity.Like">
		INSERT INTO
		tb_like(post_id,user_id)
		VALUES
		(#{postId},#{userId})
	</insert>

	<delete id="deleteLike">
		DELETE FROM
		tb_like
		WHERE
		post_id =
		#{postId} and user_id=#{userId}
	</delete>
</mapper>
    