<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.daily.dao.PostDao">
	<select id="queryPost" resultType="com.daily.entity.Post">
		SELECT *
		FROM tb_post
		
	</select>
	<select id="queryPostByUserId" resultType="com.daily.entity.Post">
		SELECT *
		FROM tb_post
		WHERE
		post_id=#{postId}
	</select>
	<update id="updateCommentNum" parameterType="com.daily.entity.Post">
		update tb_post
		<set>
			 
			comment_num=comment_num + #{commentNum}
		</set>
		where post_id=#{postId}
	</update>
	<select id="queryCommentNum" resultType="java.lang.Integer">
		SELECT comment_num
		FROM tb_post
		WHERE
		post_id=#{postId}
	</select>
</mapper>
    