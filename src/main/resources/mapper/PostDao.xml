<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.massizhi.daily.dao.PostDao">
    <select id="queryPostByUserId" resultType="com.massizhi.daily.entity.Post">
        SELECT *
        FROM tb_post
        WHERE
        user_id=#{userId}
    </select>

    <select id="queryPostByContentAndUserId" resultType="com.massizhi.daily.entity.Post">
        SELECT *
        FROM tb_post
        WHERE
        post_content like '%${str}%' AND user_id=#{userId}
    </select>
    <select id="queryUserByPostId" resultType="java.lang.Integer">
        SELECT user_id
        FROM tb_post
        WHERE
        post_id=#{postId}
    </select>
</mapper>