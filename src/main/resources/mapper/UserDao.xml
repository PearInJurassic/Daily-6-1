<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.daily.dao.UserDao">
    <select id="getPasswordByEmail" resultType="String">
        SELECT user_pwd
        FROM tb_user
        WHERE
        email=#{email}
    </select>
	<select id="getUserIdByEmail" resultType="java.lang.Integer">
        SELECT user_id
        FROM tb_user
        WHERE
        email=#{email}
    </select>
	<select id="existEmail" resultType="java.lang.Integer">
		SELECT 1
		FROM tb_user
		WHERE
		email=#{email}
	</select>

    <insert id="insertUser" useGeneratedKeys="true" keyProperty="userId"
            keyColumn="user_id" parameterType="com.daily.entity.User">
		INSERT INTO
		tb_user(user_type,user_name,user_pwd,user_img,area_id,
		user_date,gender,profile,state,fans_num,follow_num,email)
		VALUES
		(#{userType},#{userName},#{userPwd},#{userImg},#{areaId},
		#{userDate},#{gender},#{profile},#{state},#{fansNum},#{followNum},#{email})
	</insert>
    <delete id="delUserById">
		DELETE FROM
		tb_user
		WHERE
		user_id =
		#{userId}
	</delete>
	<update id="freezeUserById">
		update tb_user
		<set>
			state=0
		</set>
		where user_id=#{userId}
	</update>
	<select id="getUserByUserId" resultType="com.daily.entity.User">
        SELECT *
        FROM tb_user
        WHERE
        user_id=#{userId}
    </select>
	<select id="getUserFollowInfoByUserId" resultType="com.daily.entity.UserFollowInfo">
        SELECT user_id,user_name,user_img
        FROM tb_user
        WHERE
        user_id=#{userId}
    </select>
	<update id="decUserFansNum" parameterType="int">
		UPDATE tb_user
		<set>
			fans_num=fans_num+1
		</set>
		WHERE user_id=#{userId}
	</update>
	<update id="incUserFansNum" parameterType="int">
		UPDATE tb_user
		<set>
			fans_num=fans_num-1
		</set>
		WHERE user_id=#{userId}
	</update>
	<update id="decUserFollowNum" parameterType="int">
		UPDATE tb_user
		<set>
			follow_num=follow_num+1
		</set>
		WHERE user_id=#{userId}
	</update>
	<update id="incUserFollowNum" parameterType="int">
		UPDATE tb_user
		<set>
			follow_num=follow_num-1
		</set>
		WHERE user_id=#{userId}
	</update>
	<update id="updateUser" parameterType="com.daily.entity.User">
		UPDATE tb_user
		<set>
			<if test="userName != null">user_name=#{userName},</if>
			<if test="userPwd != null">user_pwd=#{userPwd},</if>
			<if test="userImg != null">user_img=#{userImg},</if>
			<if test="areaId != null">area_id=#{areaId},</if>
			<if test="userDate != null">user_date=#{userDate},</if>
			<if test="gender != null">gender=#{gender},</if>
			<if test="profile != null">profile=#{profile},</if>
			<if test="email != null">email=#{email},</if>
		</set>
		WHERE user_id=#{userId}
	</update>
</mapper>