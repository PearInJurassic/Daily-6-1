<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.massizhi.daily.dao.UserDao">
    <select id="getUserByUserId" resultType="com.massizhi.daily.entity.User">
        SELECT user_id,user_type,user_name,user_pwd,user_img,
        area_id,user_date,gender,profile,state,fans_num,follow_num
        FROM tb_user
        WHERE
        user_id=#{userId}
    </select>
    <select id="getUserFollowInfoByUserId" resultType="com.massizhi.daily.entity.UserFollowInfo">
        SELECT user_id,user_name,user_img
        FROM tb_user
        WHERE
        user_id=#{userId}
    </select>
    <update id="decUserFansNum" parameterType="int">
        UPDATE tb_user
        <set>
            fans_num=fans_num+1
        </set>
        WHERE user_id=#{userId}
    </update>
    <update id="incUserFansNum" parameterType="int">
        UPDATE tb_user
        <set>
            fans_num=fans_num-1
        </set>
        WHERE user_id=#{userId}
    </update>
    <update id="decUserFollowNum" parameterType="int">
        UPDATE tb_user
        <set>
            follow_num=follow_num+1
        </set>
        WHERE user_id=#{userId}
    </update>
    <update id="incUserFollowNum" parameterType="int">
        UPDATE tb_user
        <set>
            follow_num=follow_num-1
        </set>
        WHERE user_id=#{userId}
    </update>
    <update id="updateUser" parameterType="com.massizhi.daily.entity.User">
        UPDATE tb_user
        <set>
            <if test="userName != null">user_name=#{userName},</if>
            <if test="userPwd != null">user_pwd=#{userPwd},</if>
            <if test="userImg != null">user_img=#{userImg},</if>
            <if test="areaId != null">area_id=#{areaId},</if>
            <if test="userDate != null">user_date=#{userDate},</if>
            <if test="gender != null">gender=#{gender},</if>
            <if test="profile != null">profile=#{profile},</if>
        </set>
        WHERE user_id=#{userId}
    </update>
</mapper>