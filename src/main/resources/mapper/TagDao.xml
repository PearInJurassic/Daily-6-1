<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.daily.dao.TagDao">
	
	<select id="queryTagByPostId" resultType="com.daily.entity.Tag">
		SELECT *
		FROM tb_tag
		WHERE
		tag_id=#{tagId}
	</select>
	
	<insert id="insertTag" useGeneratedKeys="true" keyProperty="tagId"
		keyColumn="tag_id" parameterType="com.daily.entity.Tag">
		INSERT INTO
		tb_tag(tag_content,post_id)
		VALUES
		(#{tagContent},#{postId})
	</insert>
	
	<delete id="deleteTag">
		DELETE FROM
		tb_tag
		WHERE
		tag_id =
		#{tagId}
	</delete>
</mapper>
    