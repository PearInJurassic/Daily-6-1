<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.daily.dao.AreaDao">
    <select id="getAreaById" resultType="com.daily.entity.Area">
        SELECT area_id, area_name
        FROM tb_area
        WHERE
        area_id=#{areaId}
    </select>
    <select id="getAreaByName" resultType="com.daily.entity.Area">
        SELECT area_id, area_name
        FROM tb_area
        WHERE
        area_name=#{areaName}
    </select>
</mapper>